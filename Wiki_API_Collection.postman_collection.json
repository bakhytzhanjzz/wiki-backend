							"mode": "raw",
							"raw": "{\n  \"email\": \"owner@test.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"Test Owner\",\n  \"companyName\": \"Test Company\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/auth/register",
							"host": ["{{baseUrl}}"],
							"path": ["auth", "register"]
						}
					},
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    var jsonData = pm.response.json();",
									"    pm.collectionVariables.set(\"accessToken\", jsonData.data.accessToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					]
				},
